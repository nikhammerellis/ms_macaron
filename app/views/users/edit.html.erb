<h1>Edit User</h1>

<%= form_for @user, :url => users_update_path do |f| %>
	<div class="field">
		<%= f.label :first_name %><br />
		<%= f.text_field :first_name %>
	</div>
	<br />
	<div class="field">
		<%= f.label :last_name %><br />
		<%= f.text_field :last_name %>
	</div>
	<br />
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<br />
	<p>*Password should be at least 8 characters</p>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<br />
	<div class="field">
		<%= f.label "Confirm Password" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<br />
	<div class="actions">
	    <%= f.submit "Update" %>
	 </div>
<% end %>