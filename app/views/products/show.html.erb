<a href="/">Home</a>
<a href="/products/index">Products</a>
<% if @user %>
	<% if @user.admin == true %>
		<a href="/products/<%= @product.id %>" data-confirm="Are you sure?" data-method="delete"><button>Remove Product</button></a>
		<a href="/products/<%= @product.id %>/edit"><button>Edit Product Info</button></a>
	<% end %> 
<% end %>
<h1><%= @product.name %></h1>
<% if @product.image? %>
	<%= image_tag @product.image.url %>
<% end %>
<p><%= @product.description %></p>
