<div class="container">
	<div class="singlePost">
		<div class="row navigation">
			<a href="/" class="button tiny">Home</a>
			<a href="/products/index" class="button tiny">Products</a>
			<% if @user %>
				<% if @user.admin == true %>
					<a href="/products/<%= @product.id %>" class="button tiny alert" data-confirm="Are you sure?" data-method="delete">Remove Product</a>
					<a href="/products/<%= @product.id %>/edit" class="button tiny success">Edit Product Info</a>
				<% end %> 
			<% end %>
		</div>

		<h1 class="showTitle"><%= @product.name %></h1>
		<% if @product.image? %>
			<div class="blogImage"><%= image_tag @product.image.url %></div>
		<% end %>
		<p class="content"><%= @product.description %></p>
	</div>
</div>