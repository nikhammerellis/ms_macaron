<h1>Post a new product</h1>
<a href="/">Home</a><br /><br />
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p class="red"><%= error %></p>
	<% end %>
<% end %>
<%= form_for @product, :url => products_create_path, :html => {:multipart => true} do |f| %>
	<%= f.label :name %><br />
	<%= f.text_field :name %><br />
	<%= f.label :description %><br />
	<%= f.text_area :description %><br /> 
	<%= f.label :image %><br />
	<%= f.file_field :image %><br /><br />
	<%= f.submit :submit %>
<% end %>
