<h1>Author a blog entry</h1>
<a href="/">Home</a><br /><br />
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p class="red"><%= error %></p>
	<% end %>
<% end %>
<%= form_for @blog, :url => blogs_create_path, :html => {:multipart => true} do |f| %>
	<%= f.label :title %><br />
	<%= f.text_field :title %><br />
	<%= f.label :content %><br />
	<%= f.text_area :content %><br /> 
	<%= f.label :image %><br />
	<%= f.file_field :image %><br /><br />
	<%= f.submit :submit %>
<% end %>